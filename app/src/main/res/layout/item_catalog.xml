<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
                                    xmlns:app = "http://schemas.android.com/apk/res-auto"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_margin = "@dimen/margin_item"
                                    app:cardCornerRadius = "@dimen/radius_item"
                                    app:cardElevation = "@dimen/elevation_item"
                                    app:cardUseCompatPadding = "true">

  <RelativeLayout
    android:layout_width = "@dimen/width_item_catalog"
    android:layout_height = "@dimen/height_item_catalog"
    android:orientation = "vertical">
    
    <ImageView
      android:id = "@+id/thumbnail"
      android:layout_width = "match_parent"
      android:layout_height = "0dp"
      android:layout_above = "@+id/name"
      android:layout_alignParentTop = "true"
      android:padding = "@dimen/margin_default"/>
    
    <TextView
      android:id = "@+id/name"
      android:textStyle = "bold"
      android:layout_width = "match_parent"
      android:layout_height = "wrap_content"
      android:layout_margin = "@dimen/margin_default"
      android:layout_alignParentBottom = "true"
      android:gravity = "center"
      android:maxLines = "1"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>